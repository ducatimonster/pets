
<div class="panel panel-default">
  <div class="panel-body">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Created on:</strong>
      <%= @service.created_at.strftime("%m/%d/%Y") %>
    </p>

    <p>
      <strong>Service name:</strong>
      <%= @service.service_name %>
    </p>
    <p>
      <strong>Service description:</strong>
      <%= @service.service_description %>
    </p>



    <%= link_to 'Edit', edit_service_path(@service), :class=> "btn btn-warning" %>
    <%= link_to 'New Service', new_service_path, :class=> "btn btn-success" %>
    <%= link_to 'Back to Service List', services_path , :class=> "btn btn-primary"%>

  </div>
</div>

