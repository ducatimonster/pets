<h1>Service List</h1>

<div class="panel panel-default">
  <div class="panel-body">

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @services.each do |service| %>
          <tr>

            <td><%= service.service_name %></td>
            <td><%= service.service_description %></td>
            <!--<td><%= link_to 'Show', service, :class=>"btn btn-info sm" %></td>-->
            <td><%= link_to 'Edit', edit_service_path(service), :class=>"btn btn-warning sm" %></td>
            <!--<td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate @services, renderer: BootstrapPagination::Rails %>

