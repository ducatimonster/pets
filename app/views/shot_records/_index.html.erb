<table>
  <thead>
  <tr>
    <th>Vaccination</th>
    <th>Given Date</th>
    <th>Expiration Date</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @shot_records.each do |shot_record| %>
      <tr>
        <td><%= shot_record.vaccination.vaccination_name rescue "" %></td>
        <td><%= shot_record.shot_date.strftime("%m/%d/%Y") %></td>
        <td><%= shot_record.shot_expiration.strftime("%m/%d/%Y") %></td>
        <!--<td><%= shot_record.vaccination_current rescue "" %></td>-->
        <% if shot_record.vaccination_current.casecmp('valid') == 0%>
            <td class="green">
        <% else %>
            <td class="red">
        <% end %>
        <%= shot_record.vaccination_current%>

        <td><%= link_to 'Edit', edit_shot_record_path(shot_record), :class=> "btn btn-warning btn-xs" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>

