<!DOCTYPE html>
<html>
<head>
  <title>Hotdog Grooming</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true  %>

  <!--font-->
  <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>

  <!--<link rel="stylesheet" type="text/css" href="bootstrap\css\bootstrap.css">-->
  <!--<script src="bootstrap\js\bootstrap.js"></script>-->
  <!--<script src="bootstrap\js\bootstrap.min.js"></script>-->
  <!--<script src="bootstrap\js\npm.js"></script>-->

  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


  <script src="jquery.js" type="text/javascript"></script>
  <script src="jquery.maskedinput.js" type="text/javascript"></script>

  <%= csrf_meta_tags %>
</head>

<body>
<nav class="navbar navbar-fixed-top glass5">
  <%= image_tag("pets.png", :alt => "header", :width => "100px;", :id => "pets_icon") %>
  <div class="top_search", style="float:right;">
    <%= form_tag pets_path, :method => 'get' do %>
        <div class="">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], :placeholder => "Find pet or client", :class => "form-control", size: "30" %>
            <span class="input-group-btn">
             <%= submit_tag "Go", :name => nil, :class => "btn btn-default" %>
          </span>
          </div><!-- /input-group -->
        </div>
    <% end %>
  </div><br><br>
</nav>

<div class="side_nav" >

    <div class="glass4">
      <!--<%= image_tag("dog_only.png", :alt => "header", :width => "45%", :class => 'header one-edge-shadow', :id => 'header_img') %>-->
      <%= link_to image_tag("hot_dog_text.png", :alt => "header", :width => "100%", :class => 'header one-edge-shadow', :id => 'header_img'), root_path %>
    </div>

  <%= link_to "Home", root_path,  {class:"glass"}%>
  <%= link_to "Search Pets", pets_path, {class:"glass"} %>
  <%= link_to "New Incident Log", new_incident_path, {class:"glass"} %>

  <div class="glass3 click_show_important">

    Clients
    <span class="glyphicon glyphicon-triangle-top"></span><span class="glyphicon glyphicon-triangle-bottom" style="display: none"></span>
  </div>
  <div class="important_section">
    <%= link_to "Search Client", clients_path, :class=>"glass2" %>
    <%= link_to "Add New Client", new_client_path, :class=>"glass2" %>
  </div>



  <div class="glass3 click_show_important">Reports
    <span class="glyphicon glyphicon-triangle-top"></span><span class="glyphicon glyphicon-triangle-bottom" style="display: none"></span>
  </div>
  <div class="important_section">
    <%= link_to "Pet Incidents", reports_incidents_path, :class=>"glass2" %>
    <%= link_to "Pet Rabies Expiration", reports_expired_rabies_path, :class=>"glass2" %>
    <%= link_to "Client Visits", reports_return_visit_path, :class=>"glass2" %>
    <%= link_to "New Clients", reports_new_clients_path, :class=>"glass2" %>
    <%= link_to "Grooming Visits", groomings_path, :class=>"glass2" %>

  </div>

  <div class="glass3 click_show">Admin
    <span class="glyphicon glyphicon-triangle-bottom"></span><span class="glyphicon glyphicon-triangle-top" style="display: none"></span>
  </div>
  <div class="section">
    <%= link_to "Pet Breeds", breeds_path, :class=>"glass2" %>
    <%= link_to "Pet Color", colors_path, :class=>"glass2" %>
    <%= link_to "Services", services_path, :class=>"glass2" %>
    <%= link_to "Vaccinations", vaccinations_path, :class=>"glass2" %>
    <%= link_to "Note Types", note_types_path, :class=>"glass2" %>
    <%= link_to "Employees", employees_path, :class=>"glass2" %>

  </div>


</div>

<div class="wrapper">

  <div class="contents">
    <%= yield %>
  </div>

</div>

<footer>
  <p>
    DESIGNED & DEVELOPED BY <b>T.W.O CONSULTING</b>
  </p>

</footer>
</body>

</html>
